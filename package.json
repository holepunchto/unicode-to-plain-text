{
  "name": "unicode-to-plain-text",
  "version": "0.0.1",
  "description": "Convert fancy Unicode text to plain ASCII with smart language preservation",
  "keywords": [
    "unicode",
    "ascii",
    "text-processing",
    "normalization",
    "unicode-to-ascii",
    "string-manipulation",
    "text-sanitization",
    "text-cleaning",
    "fancy-text",
    "plain-text",
    "text-normalization",
    "unicode-normalization"
  ],
  "homepage": "https://github.com/holepunchto/unicode-to-plain-text#readme",
  "bugs": {
    "url": "https://github.com/holepunchto/unicode-to-plain-text/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holepunchto/unicode-to-plain-text.git"
  },
  "license": "Apache-2.0",
  "author": "Holepunch Inc",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run format:check && npm run build && npm test",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "brittle 'tests/**/*.test.js'"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "brittle": "^3.19.0",
    "prettier": "^3.6.2",
    "prettier-config-holepunch": "^2.0.0",
    "typescript": "^5.9.3"
  }
}